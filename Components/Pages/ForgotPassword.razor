@page "/forgot-password"
@using AutoMotiveProject.cs.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Forgot Password - Mama Autos</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>MAMA AUTOS</h2>
            <p>Reset Your Password</p>
        </div>

        <div class="forgot-form">
            <div class="form-group">
                <label>Email Address</label>
                <input @bind="email" type="email" class="form-control" placeholder="Enter your email" />
            </div>

            <div class="form-group">
                <label>New Password</label>
                <input @bind="newPassword" type="password" class="form-control" placeholder="Enter new password" />
            </div>

            <div class="form-group">
                <label>Confirm Password</label>
                <input @bind="confirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
            </div>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="@(isSuccess ? "success-message" : "error-message")">@message</div>
            }

            <button @onclick="ResetPassword" class="btn btn-primary btn-full">Reset Password</button>
            
            <div class="back-to-login">
                <a href="/login">‚Üê Back to Login</a>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string newPassword = "";
    private string confirmPassword = "";
    private string message = "";
    private bool isSuccess = false;

    private void ResetPassword()
    {
        message = "";
        isSuccess = false;

        if (string.IsNullOrEmpty(email) || string.IsNullOrEmpty(newPassword) || string.IsNullOrEmpty(confirmPassword))
        {
            message = "Please fill in all fields.";
            return;
        }

        if (!IsValidEmail(email))
        {
            message = "Please enter a valid email address.";
            return;
        }

        if (newPassword.Length < 6)
        {
            message = "Password must be at least 6 characters long.";
            return;
        }

        if (newPassword != confirmPassword)
        {
            message = "Passwords do not match.";
            return;
        }

        if (!AuthService.UserExists(email))
        {
            message = "Email address not found.";
            return;
        }

        if (AuthService.UpdatePassword(email, newPassword))
        {
            message = "Password updated successfully! You can now login with your new password.";
            isSuccess = true;
            
            // Clear form after success
            email = "";
            newPassword = "";
            confirmPassword = "";
        }
        else
        {
            message = "Failed to update password. Please try again.";
        }
    }

    private bool IsValidEmail(string email)
    {
        return email.Contains("@") && email.Contains(".") && email.Length > 5;
    }
}